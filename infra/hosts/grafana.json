    "imageResourceGroupName": {
      "type": "string",
      "defaultValue": "supafana-common-rg"
    },
    "imageGalleryName": {
      "type": "string",
      "defaultValue": "supafanasig"
    },
    "imageName": {
      "type": "string",
      "defaultValue": "grafana"
    },
    "imageVersion": {
      "type": "string",
      "defaultValue": "0.0.5"
    },
    "projectId": {
      "type": "string",
      "defaultValue": "[parameters('supabaseProjectRef')]"
    },
