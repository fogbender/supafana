      "type": "string"
    },
    "supabaseServiceRoleKey": {
      "type": "string"
    },
    "supafanaDomain": {
      "type": "string"
    },
    "grafanaPassword": {
      "type": "string",
      "defaultValue": "admin"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
